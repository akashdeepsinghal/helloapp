{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/apps/backend/$1"
        },
        {
          "src": "/(.*)",
          "dest": "/apps/frontend/$1"
        }
      ],
    "env": {
      "YOUR_ENV_VARIABLE": "value"
    }
  }
  